<%- include('partials/header') -%>

<div class="hero min-h-screen bg-base-200">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-5xl font-bold">Hello there</h1>
       <h1 class="py-6">Your total collection value is $<%= total%></h1>
<h1 class="py-6">Your highest value item is $<%= sorted[0].price%> (<%= sorted[0].title%>)</h1>
<h1 class="py-6">Your lowest value item is $<%= sorted[sorted.length-1].price%> (<%= sorted[sorted.length-1].title%>)</h1>
<h1 class="py-6">Your collection is <%= sorted.length%> pieces total</h1>
<h1 class="py-6">Average garment price: $<%= ((total)/(sorted.length)).toFixed(2)%></h1>
    </div>
  </div>
  
</div>

<div class="container">
  <div class="space-evenly ">
    <ul class="row list-unstyled">
      <% for(var i=0; i<posts.length; i++) {%>
        <% if (posts[i].status == "public") { %>
        <li class="card card-body w-96 bg-base-100 shadow-xl">
          <a href="/post/<%= posts[i]._id%>">
            <img class="img-fluid" src="<%= posts[i].image%>">
            <h2 class="card-title"><%= posts[i].title%></h2>
  <p>Lorem Ipsum</p>
          </a>
        </li>
      <% } %>
      <% } %>
      </ul>
  </div>
</div>  

 
<%- include('partials/footer') -%>